{
    "name": "client-server-template-with-vite",
    "private": true,
    "scripts": {
        "bootstrap": "yarn && node init.js && lerna clean && yarn && lerna bootstrap",
        "build": "rm -rf packages/client/dist && rm -rf packages/server/dist && lerna run build",
        "dev:client": "lerna run dev --scope=client",
        "dev:server": "lerna run dev --scope=server",
        "dev": "lerna run dev",
        "test": "lerna run test",
        "lint": "lerna run lint",
        "format": "lerna run format",
        "preview": "lerna run preview"
    },
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "engines": {
        "node": ">=20"
    },
    "dependencies": {
        "rollup": "^4.24.3"
    },
    "devDependencies": {
        "@evilmartians/lefthook": "^1.3.9",
        "lerna": "^5.4.3",
        "@types/rollup": "^0.54.0"
    }
}
